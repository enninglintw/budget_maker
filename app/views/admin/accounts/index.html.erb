<h1>Accounts</h1>

<button>
  <%= link_to '新增 Account', new_admin_account_path %>
</button>

<table>
  <thead>
    <tr>
      <th colspan="2">actions</th>
      <th>name</th>
      <th>currency</th>
      <th>balance</th>
      <th>exchange_rate</th>
      <th>balance_in_twd</th>
      <th>updated_at</th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= link_to('edit', edit_admin_account_path(account)) %></td>
        <td><%= link_to 'delete', admin_account_path(account), method: :delete, data: { confirm: "Are you sure?" } %></td>
        <td><%= link_to(account.name, admin_account_path(account)) %></td>
        <td><%= render_currency(account) %></td>
        <td><%= render_balance(account) %></td>
        <td><%= render_exchange_rate(account) %></td>
        <td><%= render_balance_in_twd(account) %></td>
        <td><%= account.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
